<div class="grass">

  <h1> <%= current_user.username %>'s Garden <%= image_tag "maybelogo.png", alt: "carrot", width: 100 %></h1>
  <div class="buttton">
    <%= link_to user_tasks_path, {class: "obbtn"} do %>
               Check your tasks
        <% end %>
    <%= link_to plants_path, {class: "obbtn"} do %>
               Choose another plant
        <% end %>
  </div>
<div class="garden">
  <% @garden_plants.each do |garden_plant| %>
        <%= link_to user_tasks_path, {class: "plot"} do %>
        <div class="logo" style="background-image: url(<%= cl_image_path garden_plant.plant.logo_url %>)">
        </div>
      <% end %>
    <% end %>
    <% @number_of_plots.times do  %>
    <div class="plot"></div>
    <% end %>
  </div>
</div>



