

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1526392587392-d1627b6c134a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=60);">
  <div class="container">
    <div class="card-product-infos">
      <div>
        <h1><strong>Let's Plant</strong></h1>
        <p> Here is a list of fruit,
            choose them,
            take a look in its description,
            then add them to your garden.
            And, <strong>Lets'grow </strong>
        </p>
      </div>
      <div class="card-trip">
        <div class="card-trip-infos">
          <div>
            <h2>Title here</h2>
            <p>Short description here!</p>
          </div>
        </div>
      </div>

    </div>
    <div class="card-product">
      <div class="cards">
        <% @plants.each do |plant| %>
          <%= link_to plant_path(plant) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url('<%= cl_image_path plant.logo_url %>')">
              <%= plant.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>






